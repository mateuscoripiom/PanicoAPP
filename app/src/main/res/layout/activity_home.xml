<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="407dp"
        android:layout_height="70dp"

        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/navbar" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="372dp"
        android:layout_height="423dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fundohome"
        tools:layout_editor_absoluteY="-13dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/personagem"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logopanico" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins"
        android:text="@string/franquia"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgpanico1"
                    android:layout_width="110dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="20dp"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/posterpanico" />

                <ImageView
                    android:id="@+id/imgpanico2"
                    android:layout_width="110dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgpanico1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/posterpanico2" />

                <ImageView
                    android:id="@+id/imgpanico3"
                    android:layout_width="110dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgpanico2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/posterpanico3" />

                <ImageView
                    android:id="@+id/imgpanico4"
                    android:layout_width="110dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgpanico3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/posterpanico4" />

                <ImageView
                    android:id="@+id/imgpanico5"
                    android:layout_width="110dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgpanico4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/posterpanico5" />

                <ImageView
                    android:id="@+id/imgpanico6"
                    android:layout_width="110dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgpanico5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/posterpanico6" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/imgbtnhome"
        android:layout_width="63dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnfilme"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@+id/imageView22"
        app:layout_constraintTop_toTopOf="@+id/imageView22"
        app:srcCompat="@drawable/casa" />

    <ImageButton
        android:id="@+id/imgbtnfilme"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnserie"
        app:srcCompat="@drawable/filmeicon"
        tools:layout_editor_absoluteY="687dp" />

    <ImageButton
        android:id="@+id/imgbtnserie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/imgbtnperfil"
        app:srcCompat="@drawable/tvicon"
        tools:layout_editor_absoluteY="687dp" />

    <ImageButton
        android:id="@+id/imgbtnperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/imgbtntelefone"
        app:srcCompat="@drawable/personicon"
        tools:layout_editor_absoluteY="688dp" />

    <ImageButton
        android:id="@+id/imgbtntelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="36dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="@+id/imageView22"
        app:layout_constraintTop_toTopOf="@+id/imageView22"
        app:srcCompat="@drawable/telefoneicon" />


</androidx.constraintlayout.widget.ConstraintLayout>